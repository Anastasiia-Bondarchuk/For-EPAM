package com.company;
import java.util.Scanner;

public class Main {
    public static void ArrOutput(int n, int arr[][])
    {
        for (int i=0;i<n;i++)
        {
            System.out.printf("{");
            for (int j=0;j<n;j++)
            {
                System.out.printf("%d ", arr[i][j]);
            }
            System.out.printf("}");
            System.out.println();
        }
    }

    public static void main(String[] args)
    {
        Scanner in=new Scanner(System.in);
        System.out.print("Input a number: ");
        int n = in.nextInt();
        int [][]arr = new int[n][n];
        for (int i=0;i<n;i++)
        {
            for (int j=0;j<n;j++)
            {
                arr[i][j]=(int)Math.round(Math.random()*9);
                while (i==j && (arr[i][j]==1 || arr[i][j]==0))
                    arr[i][j]=(int)Math.round(Math.random()*9);
            }
        }
        System.out.printf("{\n");
        ArrOutput(n, arr);
        System.out.printf("}");
        for (int i=0;i<n;i++)
        {
            for (int j=0;j<n;j++)
            {
                if (i>j)
                    arr[i][j]=0;
                if (i<j)
                    arr[i][j]=1;
            }
        }
        System.out.printf("Arrau after chamge: \n\n{\n");
        ArrOutput(n, arr);
        System.out.printf("}");
    }
}
