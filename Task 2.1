package com.company;
import java.util.Scanner;

public class Main {
    public static void ArrOutput(int n, int arr[])
    {
        for (int i=0;i<n;i++)
        {
            System.out.printf("%d ", arr[i]);
        }
    }

    public static void main(String[] args)
    {
        Scanner in=new Scanner(System.in);
        System.out.print("Input a number: ");
        int n = in.nextInt();
        int []arr = new int[n];
        for (int i=0;i<n;i++)
        {
            arr[i]=(int)Math.round(Math.random()*30);
        }
        ArrOutput(n, arr);

        for (int i=0;i<n/2;i++)
        {
            arr[i]= arr[i]+arr[n-i-1];
            arr[n-i-1]= arr[i]-arr[n-i-1];
            arr[i]=arr[i]-arr[n-i-1];
        }
        System.out.println("\n\nChanged array:");
        ArrOutput(n, arr);

    }
}
